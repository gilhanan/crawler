{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"]
}
